				{
					"listen": "test",
					"script": {
						"id": "bf09a3c7-63e3-4dce-9e50-42800f602bc6",
						"exec": [
							"var jsonData = JSON.parse(responseBody);",
							"postman.setEnvironmentVariable(\"token\", jsonData.access_token);",
							"",
							""
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Ocp-Apim-Subscription-Key",
						"value": "{{Ocp-Apim-Subscription-Key_token}}"
					},
					{
						"key": "Content-Type",
						"value": "application/json"
					},
					{
						"key": "client_id",
						"value": "{{merchant_client_id}}",
						"type": "text"
					},
					{
						"key": "client_secret",
						"value": "{{merchant_client_secret}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "https://{{url}}/accesstoken/get",
					"protocol": "https",
					"host": [
						"{{url}}"
					],
					"path": [
						"accesstoken",
						"get"
					]
				},
				"description": "Retrives an authorization token that can be used in calling Vipps API's. Valid for 24 hours."
			},
			"response": []
